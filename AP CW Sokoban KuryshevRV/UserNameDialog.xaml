<Window x:Class="AP_CW_Sokoban_KuryshevRV.UserNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_CW_Sokoban_KuryshevRV"
        mc:Ignorable="d"
        Title="Ввод имени" Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Text="Введите Ваше имя:" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
        <TextBox x:Name="tbNameInput" Margin="5,0,15,100" VerticalAlignment="Bottom" Height="30"/>
        <Button Content="OK" IsDefault="True" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,10" MinWidth="60" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Height="27" Width="84"/>
    </Grid>
</Window>
